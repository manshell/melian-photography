<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>
        Image
      </th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.description %></td>
        <td>
          <%= image_tag post.image.url(:thumb) %>
        </td>
        <td><%= post.category_id %></td>
        <td><%= link_to 'Show', post, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

