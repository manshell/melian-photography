<p id="notice"><%= notice %></p>

<div class="col-lg-12 col-sm-6 center-show">
    <div class="show-box transform show-img" id="button-transform">
        <%= image_tag @post.image.url, class: "img-responsive transform" %>
        <div class="show-box-caption">
            <div class="show-box-caption-content">
                <div class="project-category text-faded">
                    <%= @post.description %>
                </div>
                <div class="project-name">
                    <%= @post.name %>
                </div>
                <div class="project-name">
                    <%= @post.category.name %>
                </div>
            </div>
        </div>
    </div>
    <div class="show-button col-lg-12 col-sm-6">
		<%= link_to 'Back to Portfolio', portfolio_path, class: "btn btn-primary" %>
	</div>
</div>
